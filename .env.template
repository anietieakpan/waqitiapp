# Waqiti P2P Payment Application - Environment Variables Template
# Copy this file to .env and set secure values for production deployment
# NEVER commit .env file to version control

# ==============================================================================
# DATABASE CREDENTIALS - MICROSERVICE ISOLATION
# ==============================================================================
# Legacy shared database (for migration period)
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=waqiti_user
POSTGRES_DB=waqiti

# Isolated Database Credentials per Microservice
USER_DB_PASSWORD=your_secure_user_db_password_here
PAYMENT_DB_PASSWORD=your_secure_payment_db_password_here
WALLET_DB_PASSWORD=your_secure_wallet_db_password_here
LEDGER_DB_PASSWORD=your_secure_ledger_db_password_here
COMPLIANCE_DB_PASSWORD=your_secure_compliance_db_password_here
ANALYTICS_DB_PASSWORD=your_secure_analytics_db_password_here
SECURITY_DB_PASSWORD=your_secure_security_db_password_here
NOTIFICATION_DB_PASSWORD=your_secure_notification_db_password_here

# ==============================================================================
# SSL CERTIFICATE PASSWORDS
# ==============================================================================
SSL_KEYSTORE_PASSWORD=your_secure_keystore_password_here
SSL_TRUSTSTORE_PASSWORD=your_secure_truststore_password_here

# ==============================================================================
# KAFKA SSL CONFIGURATION
# ==============================================================================
KAFKA_SSL_KEYSTORE_PASSWORD=your_secure_kafka_keystore_password_here
KAFKA_SSL_KEY_PASSWORD=your_secure_kafka_key_password_here
KAFKA_SSL_TRUSTSTORE_PASSWORD=your_secure_kafka_truststore_password_here

# ==============================================================================
# KEYCLOAK AUTHENTICATION
# ==============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password_here

# ==============================================================================
# VAULT CONFIGURATION
# ==============================================================================
VAULT_ROOT_TOKEN=your_secure_vault_root_token_here
VAULT_UNSEAL_KEYS=your_vault_unseal_keys_here

# ==============================================================================
# APPLICATION SECRETS
# ==============================================================================
JWT_SECRET=your_secure_jwt_secret_here
ENCRYPTION_KEY=your_secure_encryption_key_here
API_SECRET_KEY=your_secure_api_secret_here

# ==============================================================================
# EXTERNAL SERVICE CREDENTIALS
# ==============================================================================
SWIFT_API_KEY=your_swift_api_key_here
SWIFT_API_SECRET=your_swift_api_secret_here
PAYMENT_PROVIDER_API_KEY=your_payment_provider_api_key_here
FRAUD_DETECTION_API_KEY=your_fraud_detection_api_key_here

# ==============================================================================
# MONITORING & OBSERVABILITY
# ==============================================================================
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_BASIC_AUTH=your_prometheus_auth_here

# ==============================================================================
# REDIS AUTHENTICATION
# ==============================================================================
REDIS_PASSWORD=your_secure_redis_password_here

# ==============================================================================
# ENVIRONMENT CONFIGURATION
# ==============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG_ENABLED=false

# ==============================================================================
# SECURITY NOTES
# ==============================================================================
# 1. Generate strong, unique passwords for each service
# 2. Use tools like 'openssl rand -base64 32' to generate secure passwords
# 3. Store production secrets in HashiCorp Vault or Kubernetes secrets
# 4. Rotate credentials regularly according to security policy
# 5. Enable audit logging for all credential access
# ==============================================================================
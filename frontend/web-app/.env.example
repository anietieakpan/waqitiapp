# ============================================================================
# WAQITI WEB APP - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.development for local development
# DO NOT commit .env.development or .env.production to Git!
# ============================================================================

# ----------------------------------------------------------------------------
# API CONFIGURATION
# ----------------------------------------------------------------------------
VITE_API_BASE_URL=https://api.example.com
VITE_WS_URL=wss://ws.example.com

# ----------------------------------------------------------------------------
# AUTHENTICATION (Keycloak)
# ----------------------------------------------------------------------------
VITE_KEYCLOAK_URL=https://auth.example.com
VITE_KEYCLOAK_REALM=waqiti
VITE_KEYCLOAK_CLIENT_ID=waqiti-web-app

# ----------------------------------------------------------------------------
# PAYMENT GATEWAYS
# IMPORTANT: Use TEST keys in development, LIVE keys in production only
# ----------------------------------------------------------------------------
# Stripe (PCI-DSS Compliant Payment Processing)
# Get your keys from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXXXXXX

# PayPal
VITE_PAYPAL_CLIENT_ID=SANDBOX-XXXXXXXXXXXXXXXXXXXX

# Plaid (Bank Account Linking)
VITE_PLAID_PUBLIC_KEY=PLAID_PUBLIC_KEY_PLACEHOLDER
VITE_PLAID_ENV=sandbox

# Dwolla (ACH Payments)
VITE_DWOLLA_ENV=sandbox

# Adyen
VITE_ADYEN_CLIENT_KEY=test_XXXXXXXXXXXXXXXXXXXX
VITE_ADYEN_ENV=test

# ----------------------------------------------------------------------------
# ANALYTICS & MONITORING (Optional - leave blank to disable)
# ----------------------------------------------------------------------------
# Google Analytics 4
VITE_GOOGLE_ANALYTICS_ID=

# Mixpanel
VITE_MIXPANEL_TOKEN=

# Sentry (Error Tracking)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# Datadog RUM (Real User Monitoring)
VITE_DATADOG_CLIENT_TOKEN=
VITE_DATADOG_APPLICATION_ID=
VITE_DATADOG_SITE=datadoghq.com
VITE_DATADOG_SERVICE=waqiti-web-app
VITE_DATADOG_ENV=development

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
VITE_ENABLE_CRYPTO=false
VITE_ENABLE_INVESTMENTS=false
VITE_ENABLE_VOICE_PAYMENTS=false
VITE_ENABLE_NFC_PAYMENTS=false
VITE_ENABLE_BIOMETRICS=false
VITE_ENABLE_SOCIAL_PAYMENTS=true
VITE_ENABLE_BILL_SPLITTING=true
VITE_ENABLE_RECURRING_PAYMENTS=true
VITE_ENABLE_INTERNATIONAL_TRANSFERS=false
VITE_ENABLE_BUSINESS_ACCOUNTS=false

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
VITE_ENABLE_CSP=true
VITE_ENABLE_E2E_ENCRYPTION=false
VITE_SESSION_TIMEOUT=1800000
VITE_MFA_REQUIRED=false

# ----------------------------------------------------------------------------
# PWA (Progressive Web App)
# ----------------------------------------------------------------------------
VITE_PWA_ENABLED=true
VITE_VAPID_PUBLIC_KEY=

# ----------------------------------------------------------------------------
# THIRD-PARTY SERVICES
# ----------------------------------------------------------------------------
# Google Maps API (for location-based features)
VITE_MAPS_API_KEY=

# Twilio (SMS/Voice)
VITE_TWILIO_ACCOUNT_SID=
VITE_TWILIO_AUTH_TOKEN=

# SendGrid (Email)
VITE_SENDGRID_API_KEY=

# Cloudinary (Image/Video Upload)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_API_KEY=

# ----------------------------------------------------------------------------
# CUSTOMER SUPPORT
# ----------------------------------------------------------------------------
VITE_ZENDESK_KEY=
VITE_INTERCOM_APP_ID=

# ----------------------------------------------------------------------------
# COMPLIANCE FLAGS
# ----------------------------------------------------------------------------
VITE_GDPR_ENABLED=true
VITE_CCPA_ENABLED=false
VITE_PCI_COMPLIANCE=true
VITE_SOC2_COMPLIANCE=true

# ----------------------------------------------------------------------------
# LOCALIZATION
# ----------------------------------------------------------------------------
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,pt,ar
VITE_DEFAULT_CURRENCY=USD
VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD

# ----------------------------------------------------------------------------
# CDN & ASSETS
# ----------------------------------------------------------------------------
VITE_CDN_URL=
VITE_ASSETS_URL=

# ----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (Development Only)
# ----------------------------------------------------------------------------
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_LOG_LEVEL=debug

# ============================================================================
# IMPORTANT NOTES:
# ============================================================================
# 1. NEVER commit actual secrets to Git
# 2. Use .env.development for local development
# 3. Use CI/CD secrets injection for production deployment
# 4. All variables must be prefixed with VITE_ to be accessible in code
# 5. Boolean values should be "true" or "false" strings
# 6. Restart dev server after changing environment variables
# ============================================================================

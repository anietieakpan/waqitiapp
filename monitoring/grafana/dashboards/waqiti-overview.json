{
  "id": null,
  "title": "Waqiti Platform Overview",
  "tags": ["waqiti", "overview", "production"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "hideControls": false,
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "refresh": "30s",
  "schemaVersion": 16,
  "version": 1,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "Platform Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"waqiti-.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Payment Transaction Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(payment_transactions_total[5m]))",
          "legendFormat": "Total Transactions/sec",
          "refId": "A"
        },
        {
          "expr": "sum(rate(payment_transactions_total{status=\"success\"}[5m]))",
          "legendFormat": "Successful Transactions/sec",
          "refId": "B"
        },
        {
          "expr": "sum(rate(payment_transactions_total{status=\"failed\"}[5m]))",
          "legendFormat": "Failed Transactions/sec",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "yAxes": [
        {
          "label": "Transactions/sec",
          "min": 0
        },
        {
          "show": false
        }
      ],
      "xAxis": {
        "show": true
      },
      "legend": {
        "show": true,
        "values": true,
        "current": true
      },
      "tooltip": {
        "shared": true,
        "sort": 0,
        "value_type": "individual"
      }
    },
    {
      "id": 3,
      "title": "Payment Success Rate",
      "type": "singlestat",
      "targets": [
        {
          "expr": "sum(rate(payment_transactions_total{status=\"success\"}[5m])) / sum(rate(payment_transactions_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 4
      },
      "valueName": "current",
      "format": "percent",
      "thresholds": "95,99",
      "colorBackground": true,
      "colors": ["#d44a3a", "#e24d42", "#299c46"],
      "sparkline": {
        "show": true,
        "full": false,
        "lineColor": "rgb(31, 120, 193)",
        "fillColor": "rgba(31, 118, 189, 0.18)"
      },
      "gauge": {
        "show": false
      }
    },
    {
      "id": 4,
      "title": "Active Users",
      "type": "singlestat",
      "targets": [
        {
          "expr": "sum(rate(user_login_total[5m])) * 300",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 4
      },
      "valueName": "current",
      "format": "short",
      "thresholds": "1000,5000",
      "colorBackground": false,
      "colors": ["#299c46", "#e5ac0e", "#bf1b00"],
      "sparkline": {
        "show": true,
        "full": false,
        "lineColor": "rgb(31, 120, 193)",
        "fillColor": "rgba(31, 118, 189, 0.18)"
      }
    },
    {
      "id": 5,
      "title": "Response Time (95th Percentile)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"waqiti-payment-service\"}[5m])) by (le))",
          "legendFormat": "Payment Service",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"waqiti-transaction-service\"}[5m])) by (le))",
          "legendFormat": "Transaction Service",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"waqiti-user-service\"}[5m])) by (le))",
          "legendFormat": "User Service",
          "refId": "C"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"waqiti-gateway-service\"}[5m])) by (le))",
          "legendFormat": "Gateway Service",
          "refId": "D"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "yAxes": [
        {
          "label": "Response Time (seconds)",
          "min": 0
        },
        {
          "show": false
        }
      ],
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true
      },
      "tooltip": {
        "shared": true,
        "sort": 0,
        "value_type": "individual"
      }
    },
    {
      "id": 6,
      "title": "Error Rate by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"waqiti-payment-service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"waqiti-payment-service\"}[5m])) * 100",
          "legendFormat": "Payment Service",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_requests_total{job=\"waqiti-transaction-service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"waqiti-transaction-service\"}[5m])) * 100",
          "legendFormat": "Transaction Service",
          "refId": "B"
        },
        {
          "expr": "sum(rate(http_requests_total{job=\"waqiti-user-service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"waqiti-user-service\"}[5m])) * 100",
          "legendFormat": "User Service",
          "refId": "C"
        },
        {
          "expr": "sum(rate(http_requests_total{job=\"waqiti-gateway-service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"waqiti-gateway-service\"}[5m])) * 100",
          "legendFormat": "Gateway Service",
          "refId": "D"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "yAxes": [
        {
          "label": "Error Rate (%)",
          "min": 0,
          "max": 100
        },
        {
          "show": false
        }
      ],
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true
      },
      "tooltip": {
        "shared": true,
        "sort": 0,
        "value_type": "individual"
      }
    },
    {
      "id": 7,
      "title": "Database Performance",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[5m])",
          "legendFormat": "PostgreSQL Commits/sec",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback[5m])",
          "legendFormat": "PostgreSQL Rollbacks/sec",
          "refId": "B"
        },
        {
          "expr": "pg_stat_database_numbackends",
          "legendFormat": "Active Connections",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "yAxes": [
        {
          "label": "Operations/sec & Connections",
          "min": 0
        },
        {
          "show": false
        }
      ],
      "legend": {
        "show": true,
        "values": true,
        "current": true
      }
    },
    {
      "id": 8,
      "title": "Cache Hit Rate",
      "type": "singlestat",
      "targets": [
        {
          "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 20
      },
      "valueName": "current",
      "format": "percent",
      "thresholds": "80,95",
      "colorBackground": true,
      "colors": ["#d44a3a", "#e5ac0e", "#299c46"],
      "sparkline": {
        "show": true,
        "full": false
      }
    },
    {
      "id": 9,
      "title": "Memory Usage",
      "type": "singlestat",
      "targets": [
        {
          "expr": "avg(redis_memory_used_bytes / redis_memory_max_bytes * 100)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 20
      },
      "valueName": "current",
      "format": "percent",
      "thresholds": "70,90",
      "colorBackground": true,
      "colors": ["#299c46", "#e5ac0e", "#d44a3a"],
      "sparkline": {
        "show": true,
        "full": false
      }
    },
    {
      "id": 10,
      "title": "Fraud Detection Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(fraud_detections_total[5m]))",
          "legendFormat": "Fraud Detections/sec",
          "refId": "A"
        },
        {
          "expr": "sum(rate(fraud_checks_total[5m]))",
          "legendFormat": "Total Fraud Checks/sec",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "yAxes": [
        {
          "label": "Checks/sec",
          "min": 0
        },
        {
          "show": false
        }
      ],
      "legend": {
        "show": true,
        "values": true,
        "current": true
      }
    },
    {
      "id": 11,
      "title": "Security Events",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(auth_attempts_total{status=\"failed\"}[5m]))",
          "legendFormat": "Failed Login Attempts/sec",
          "refId": "A"
        },
        {
          "expr": "sum(rate(suspicious_login_attempts_total[5m]))",
          "legendFormat": "Suspicious Login Attempts/sec",
          "refId": "B"
        },
        {
          "expr": "sum(rate(rate_limit_exceeded_total[5m]))",
          "legendFormat": "Rate Limit Violations/sec",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 28
      },
      "yAxes": [
        {
          "label": "Events/sec",
          "min": 0
        },
        {
          "show": false
        }
      ],
      "legend": {
        "show": true,
        "values": true,
        "current": true
      }
    },
    {
      "id": 12,
      "title": "Business Metrics",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(increase(payment_amount_total[1h]))",
          "legendFormat": "Hourly Transaction Volume ($)",
          "refId": "A"
        },
        {
          "expr": "sum(increase(payment_transactions_total[1h]))",
          "legendFormat": "Hourly Transaction Count",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      },
      "yAxes": [
        {
          "label": "Amount ($) / Count",
          "min": 0
        },
        {
          "show": false
        }
      ],
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true
      }
    }
  ]
}
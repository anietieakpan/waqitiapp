{
  "dashboard": {
    "title": "DLQ Monitoring Dashboard - Production",
    "tags": ["dlq", "kafka", "monitoring", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "DLQ Messages Total (All Topics)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(kafka_dlq_messages_total[5m])) by (topic)",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "DLQ Messages by Category",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(kafka_dlq_category_total[5m])) by (category)",
            "legendFormat": "{{category}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Messages in Parking Lot (Manual Intervention Required)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "kafka_dlq_parking_total",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "DLQ Retry Queue Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "kafka_dlq_retry_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Consumer Success Rate (1 - DLQ Rate)",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "1 - (rate(kafka_dlq_messages_total[5m]) / rate(kafka_consumer_records_consumed_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Critical: DLQ Send Failures",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "rate(dlq_send_failures_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.01, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "DLQ Messages by Topic (Top 10)",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "topk(10, sum(kafka_dlq_messages_total) by (topic))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          },
          "overrides": []
        }
      },
      {
        "id": 8,
        "title": "Recent DLQ Activity (Last 24h)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(increase(kafka_dlq_messages_total[1h])) by (topic)",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {"format": "short", "label": "Messages"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Payment Service - DLQ Rate",
        "type": "graph",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(kafka_dlq_messages_total{service=\"payment-service\"}[5m])) by (topic)",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Wallet Service - DLQ Rate",
        "type": "graph",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(kafka_dlq_messages_total{service=\"wallet-service\"}[5m])) by (topic)",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "DLQ Category Distribution",
        "type": "piechart",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 20},
        "targets": [
          {
            "expr": "sum(kafka_dlq_category_total) by (category)",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "pieType": "pie",
          "displayLabels": ["percent"]
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Critical DLQ Events",
          "datasource": "-- Grafana --",
          "enable": true,
          "iconColor": "red",
          "tags": ["dlq-critical"]
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(kafka_dlq_messages_total, service)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "topic",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(kafka_dlq_messages_total, topic)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    }
  }
}

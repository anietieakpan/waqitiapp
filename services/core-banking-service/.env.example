# Core Banking Service - Environment Variables
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file to version control!

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/waqiti_core_banking
SPRING_DATASOURCE_USERNAME=waqiti_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# Flyway Migration Configuration
FLYWAY_URL=jdbc:postgresql://localhost:5432/waqiti_core_banking
FLYWAY_USER=waqiti_user
FLYWAY_PASSWORD=your_secure_password_here

# Redis Configuration
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=your_redis_password_here

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Keycloak Configuration
KEYCLOAK_ISSUER_URI=https://localhost:8180/realms/waqiti-fintech
KEYCLOAK_JWK_SET_URI=https://auth.example.com/realms/waqiti-fintech/protocol/openid-connect/certs

# Vault Configuration (for production secrets management)
VAULT_TOKEN=your_vault_token_here
VAULT_URI=https://vault.example.com:8200
DATABASE_PASSWORD=${VAULT_DATABASE_PASSWORD}

# External Service URLs
LEDGER_SERVICE_URL=http://localhost:8081
COMPLIANCE_SERVICE_URL=http://localhost:8082
NOTIFICATION_SERVICE_URL=http://localhost:8083
KYC_SERVICE_URL=http://localhost:8084
FRAUD_SERVICE_URL=http://localhost:8085

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_WAQITI=DEBUG

# Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Security
JWT_SECRET=your_jwt_secret_here_min_256_bits

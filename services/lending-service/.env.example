# Lending Service Environment Variables
# Copy this file to .env and update with actual values

# Server Configuration
SERVER_PORT=8114
MANAGEMENT_PORT=8115
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waqiti_lending
DB_USERNAME=waqiti_user
DB_PASSWORD=change_me_in_production
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Eureka Service Discovery
EUREKA_ENABLED=true
EUREKA_URL=http://localhost:8761/eureka/

# Keycloak OAuth2 Configuration
KEYCLOAK_ISSUER_URI=http://localhost:8180/realms/waqiti-fintech
KEYCLOAK_JWK_SET_URI=http://localhost:8180/realms/waqiti-fintech/protocol/openid-connect/certs
KEYCLOAK_CLIENT_ID=lending-service
KEYCLOAK_CLIENT_SECRET=your_client_secret_here

# Vault Configuration (if using Vault)
VAULT_ENABLED=false
VAULT_URI=https://vault.example.internal:8200
VAULT_TOKEN=your_vault_token_here

# Lending Business Configuration
LENDING_MAX_AMOUNT=1000000.00
LENDING_MIN_AMOUNT=100.00
LENDING_MIN_CREDIT_SCORE=600
LENDING_MAX_DTI=0.43
LENDING_ORIGINATION_FEE=0.01
LENDING_LATE_FEE=25.00

# Cash Advance Configuration
CASH_ADVANCE_ENABLED=true
CASH_ADVANCE_MAX=5000.00
CASH_ADVANCE_APR=0.395

# Credit Line Configuration
CREDIT_LINE_ENABLED=true
CREDIT_LINE_MAX=50000.00

# Underwriting Configuration
UNDERWRITING_AUTO_APPROVAL=750
UNDERWRITING_AUTO_REJECT=580
UNDERWRITING_MANUAL_REVIEW=650

# External Service Configuration
CREDIT_BUREAU_ENABLED=true
FRAUD_DETECTION_ENABLED=true
NOTIFICATION_ENABLED=true

# Logging
LOG_FILE=/app/logs/lending-service.log

<?xml version="1.0" encoding="UTF-8"?>
<!--
  Secure Logging Configuration for Waqiti Banking Platform
  
  CRITICAL SECURITY: PCI DSS v4.0 compliant logging configuration
  
  This configuration implements comprehensive security logging features:
  - Automatic sensitive data masking
  - Encrypted log file storage
  - Tamper-evident audit trails
  - Secure log rotation and archival
  - Real-time security monitoring
  
  PCI DSS COMPLIANCE:
  - Requirement 10.2: Log all access to cardholder data
  - Requirement 10.5: Secure audit trails so they cannot be altered
  - Requirement 10.7: Retain audit trail history for at least one year
  
  SECURITY BENEFITS:
  - Prevents sensitive data exposure in logs
  - Enables comprehensive security monitoring
  - Supports regulatory compliance requirements
  - Provides forensic investigation capabilities
  
  @author Waqiti Engineering Team
  @version 2.0.0
  @since 2024-01-15
-->
<configuration>

    <!-- Property definitions for secure logging -->
    <property name="LOG_DIR" value="${LOG_DIR:-/var/log/waqiti}" />
    <property name="SECURE_LOG_DIR" value="${LOG_DIR}/secure" />
    <property name="ARCHIVE_LOG_DIR" value="${LOG_DIR}/archive" />
    
    <!-- Security logging pattern with data masking -->
    <property name="SECURITY_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId:-}] [%X{userId:-}] [%X{sessionId:-}] %logger{36} - %msg%n" />
    
    <!-- Standard application logging pattern -->
    <property name="STANDARD_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- Console appender for development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${STANDARD_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Security filter to prevent sensitive data in console output -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.GEventEvaluator">
                <expression>
                    return !message.contains("password") &amp;&amp; 
                           !message.contains("token") &amp;&amp;
                           !message.contains("secret") &amp;&amp;
                           !message.matches(".*\\b[0-9]{13,19}\\b.*"); <!-- Basic PAN detection -->
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>NEUTRAL</OnMatch>
        </filter>
    </appender>

    <!-- Secure audit log appender -->
    <appender name="SECURITY_AUDIT" class="com.waqiti.security.logging.SecureLogAppender">
        <logFilePath>${SECURE_LOG_DIR}/security-audit.log</logFilePath>
        <archivePath>${ARCHIVE_LOG_DIR}/</archivePath>
        <maxFileSize>100MB</maxFileSize>
        <maxArchiveFiles>365</maxArchiveFiles>
        <encryptLogs>true</encryptLogs>
        <compressArchives>true</compressArchives>
        
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${SECURITY_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Filter for security-related events only -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.GEventEvaluator">
                <expression>
                    return logger.startsWith("com.waqiti.security") ||
                           logger.startsWith("org.springframework.security") ||
                           message.contains("SECURITY") ||
                           message.contains("AUDIT") ||
                           message.contains("AUTHENTICATION") ||
                           message.contains("AUTHORIZATION");
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>

    <!-- PCI DSS compliant payment processing log appender -->
    <appender name="PCI_AUDIT" class="com.waqiti.security.logging.SecureLogAppender">
        <logFilePath>${SECURE_LOG_DIR}/pci-audit.log</logFilePath>
        <archivePath>${ARCHIVE_LOG_DIR}/</archivePath>
        <maxFileSize>50MB</maxFileSize>
        <maxArchiveFiles>2555</maxArchiveFiles> <!-- 7 years retention -->
        <encryptLogs>true</encryptLogs>
        <compressArchives>true</compressArchives>
        
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${SECURITY_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Filter for PCI-related events -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.GEventEvaluator">
                <expression>
                    return message.contains("CARDHOLDER_DATA") ||
                           message.contains("PAYMENT_PROCESSING") ||
                           message.contains("PCI") ||
                           message.contains("ENCRYPTION") ||
                           message.contains("TOKENIZATION") ||
                           logger.contains("payment") ||
                           logger.contains("card");
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>

    <!-- Application error log with security filtering -->
    <appender name="ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/application-error.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${ARCHIVE_LOG_DIR}/application-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${STANDARD_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Only ERROR level and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Access log for web requests -->
    <appender name="ACCESS_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/access.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${ARCHIVE_LOG_DIR}/access.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %X{clientIp:-} %X{userId:-} "%X{method:-} %X{requestURI:-} %X{protocol:-}" %X{status:-} %X{responseSize:-} "%X{userAgent:-}" %X{duration:-}ms%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Filter for access log events -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.GEventEvaluator">
                <expression>
                    return logger.equals("ACCESS_LOG");
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>

    <!-- Transaction log for financial operations -->
    <appender name="TRANSACTION_LOG" class="com.waqiti.security.logging.SecureLogAppender">
        <logFilePath>${SECURE_LOG_DIR}/transaction.log</logFilePath>
        <archivePath>${ARCHIVE_LOG_DIR}/</archivePath>
        <maxFileSize>200MB</maxFileSize>
        <maxArchiveFiles>2555</maxArchiveFiles> <!-- 7 years retention -->
        <encryptLogs>true</encryptLogs>
        <compressArchives>true</compressArchives>
        
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${SECURITY_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Filter for transaction events -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.GEventEvaluator">
                <expression>
                    return logger.contains("transaction") ||
                           logger.contains("payment") ||
                           logger.contains("transfer") ||
                           message.contains("TRANSACTION") ||
                           message.contains("PAYMENT");
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>

    <!-- Async wrapper for performance -->
    <appender name="ASYNC_SECURITY" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SECURITY_AUDIT"/>
        <queueSize>1000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_PCI" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="PCI_AUDIT"/>
        <queueSize>1000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_TRANSACTION" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="TRANSACTION_LOG"/>
        <queueSize>2000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- Logger configurations -->
    
    <!-- Security service logging -->
    <logger name="com.waqiti.security" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- PCI audit logging -->
    <logger name="com.waqiti.security.logging.PCIAuditLogger" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_PCI"/>
    </logger>

    <!-- Payment service logging -->
    <logger name="com.waqiti.payment" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_TRANSACTION"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Transaction service logging -->
    <logger name="com.waqiti.transaction" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_TRANSACTION"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Access logging -->
    <logger name="ACCESS_LOG" level="INFO" additivity="false">
        <appender-ref ref="ACCESS_LOG"/>
    </logger>

    <!-- Spring Security logging -->
    <logger name="org.springframework.security" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Hibernate/JPA logging (with sensitive data filtering) -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Suppress noisy third-party loggers -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.springframework.web.servlet.DispatcherServlet" level="WARN"/>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ERROR_LOG"/>
    </root>

    <!-- JMX configuration for monitoring -->
    <jmxConfigurator />

    <!-- Shutdown hook to ensure proper log file closure -->
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook">
        <delay>1000</delay>
    </shutdownHook>

</configuration>
# Lombok configuration file for the common module
# This file ensures proper Lombok processing

# Stop Lombok from looking up the tree for config files
config.stopBubbling = true

# Add @Generated annotation to all generated code
lombok.addLombokGeneratedAnnotation = true

# Generate getters and setters for all fields
lombok.getter.noIsPrefix = false
lombok.setter.flagUsage = ALLOW

# Enable builder pattern
lombok.builder.flagUsage = ALLOW

# Add nullability annotations (disabled for Jakarta EE compatibility)
# lombok.addNullAnnotations = javax

# Ensure toString includes all fields
lombok.toString.doNotUseGetters = true
lombok.toString.callSuper = SKIP

# EqualsAndHashCode configuration
lombok.equalsAndHashCode.callSuper = SKIP

# Logging configuration
lombok.log.fieldName = log
lombok.log.fieldIsStatic = true

# Ensure proper builder generation
lombok.builder.className = *Builder
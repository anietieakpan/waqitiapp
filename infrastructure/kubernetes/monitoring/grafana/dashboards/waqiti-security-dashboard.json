{
  "dashboard": {
    "id": null,
    "title": "Waqiti P2P Platform - Security & Fraud Monitoring",
    "tags": ["waqiti", "security", "fraud", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Fraud Detection Events (Real-time)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(waqiti_fraud_detections_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Security Events (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(waqiti_security_events_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Failed Authentication Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(waqiti_auth_failed_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Blocked Transactions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(waqiti_transactions_blocked_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 25}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Fraud Score Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(waqiti_fraud_score_bucket[5m])) by (le))",
            "refId": "A",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(waqiti_fraud_score_bucket[5m])) by (le))",
            "refId": "B",
            "legendFormat": "90th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(waqiti_fraud_score_bucket[5m])) by (le))",
            "refId": "C",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Security Event Types",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (event_type) (increase(waqiti_security_events_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Suspicious Activity Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(waqiti_fraud_detections_total[5m])) by (fraud_type)",
            "refId": "A",
            "legendFormat": "{{fraud_type}}"
          },
          {
            "expr": "sum(rate(waqiti_security_events_total[5m])) by (event_type)",
            "refId": "B",
            "legendFormat": "{{event_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 17}
      },
      {
        "id": 8,
        "title": "Geographic Risk Analysis",
        "type": "geomap",
        "targets": [
          {
            "expr": "sum by (country) (increase(waqiti_fraud_detections_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 26}
      },
      {
        "id": 9,
        "title": "Authentication Failure Analysis",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(waqiti_auth_failed_total[5m])) by (failure_reason)",
            "refId": "A",
            "legendFormat": "{{failure_reason}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 26}
      },
      {
        "id": 10,
        "title": "KYC Verification Status",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (status) (waqiti_kyc_verifications_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 1000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 36}
      },
      {
        "id": 11,
        "title": "Transaction Risk Score Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(waqiti_transaction_risk_score_bucket[5m])) by (le)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "spectrum"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 36}
      },
      {
        "id": 12,
        "title": "Real-time Threat Level",
        "type": "gauge",
        "targets": [
          {
            "expr": "(sum(rate(waqiti_fraud_detections_total[5m])) + sum(rate(waqiti_security_events_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "red", "value": 70}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 36}
      },
      {
        "id": 13,
        "title": "Top Blocked IPs (24h)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (ip_address) (increase(waqiti_blocked_requests_total[24h])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 44}
      },
      {
        "id": 14,
        "title": "Device Fingerprint Analysis",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(waqiti_device_fingerprint_matches_total[5m])) by (match_type)",
            "refId": "A",
            "legendFormat": "{{match_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 44}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s",
    "version": 1
  }
}
        <hashTree>
          <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="JSR223 Assertion - No Negative Balances" enabled="true">
            <stringProp name="scriptLanguage">groovy</stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="script">import groovy.json.JsonSlurper

def response = prev.getResponseDataAsString()
def jsonSlurper = new JsonSlurper()

if (prev.getResponseCode() == &quot;200&quot;) {
    def jsonResponse = jsonSlurper.parseText(response)
    def balance = jsonResponse.balance as BigDecimal
    
    if (balance &lt; 0) {
        AssertionResult.setFailure(true)
        AssertionResult.setFailureMessage(&quot;CRITICAL: Negative balance detected! Balance: &quot; + balance)
    }
} else if (prev.getResponseCode() == &quot;400&quot;) {
    if (!response.contains(&quot;INSUFFICIENT_BALANCE&quot;) &amp;&amp; !response.contains(&quot;insufficient&quot;)) {
        AssertionResult.setFailure(true)
        AssertionResult.setFailureMessage(&quot;Expected INSUFFICIENT_BALANCE error, got: &quot; + response)
    }
}
</stringProp>
          </JSR223Assertion>
